                   #        : orange

# Text sizes
figure.titlesize: xx-large
axes.titlesize:   large
axes.labelsize:   large
font.size:        10
xtick.labelsize:  medium
xtick.minor.visible: True
ytick.labelsize:  medium
ytick.minor.visible: True


date.autoformatter.minute   : %d %H:%M

# Line sizes
lines.linewidth : 3
lines.markersize : 10

# Path adjustments
patch.linewidth: 0.5
patch.antialiased: True

# Axes
axes.linewidth: 1
axes.grid: True
axes.axisbelow: True       # grid/ticks are below elements (e.g., lines, text)
xtick.direction: out
ytick.direction: out
#ytick.positon: right

# Styling
grid.linestyle:    :  # dotted: :    # solid line: -
grid.linewidth:    0.5
errorbar.capsize : 3  # Recover end error bar caps

