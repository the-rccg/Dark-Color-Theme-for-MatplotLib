backend.qt5 : PyQt5

## Colors

# Face colors
figure.facecolor :  black
savefig.facecolor : black
patch.facecolor :   348ABD  # Blue
axes.facecolor :    black

# Edge colors
figure.edgecolor :  black
savefig.edgecolor : black
patch.edgecolor :   EEEEEE  # Darkish Grey
axes.edgecolor :    333333  # Darker Grey

# Text Color
text.color:        E5E5E5  # Light Grey

# Axes color
xtick.color:       555555  # Dark Grey
ytick.color:       555555  # Dark Grey

# Grid colors
grid.color:        E5E5E5  # Light Grey

# Label colors
axes.labelcolor:   E5E5E5  # Light Grey

# Legend
legend.frameon:       True
legend.fontsize:      10
legend.numpoints:     1
legend.scatterpoints: 1
legend.facecolor:     111111

# Line colors
lines.color:        333333  # Light Grey
axes.prop_cycle: cycler('color', ['1f77b4','ff7f0e','2ca02c','d62728','9467bd','e377c2','7f7f7f','bccd22','17becf'])
		# Vega
		# 1f77b4 : blue
		# ff7f0e : orange 
		# 2ca02c : green
		# d62728 : red
		# 9467bd : purple
		# 8c564b : brown (eliminated due to bad visibility)
		# e377c2 : pink
		# 7f7f7f : grey
		# bccd22 : olive
		# 17becf : turquise

